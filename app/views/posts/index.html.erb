<div class="col-md-12">
  <div class="post">
    <%= link_to("New post", new_post_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>Post</td>
        <td>Title</td>
        <td>Description</td>
        <td>Date</td>
        <td>Location</td>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= post.id %> </td>
          <td> <%= link_to(post.title, post_path(post))%> </td>
          <td> <%= post.description %> </td>
          <td> <%= post.date %> </td>
          <td> <%= post.location %> </td>
          <td>
            <% if post.editable_by?(current_user) %>
              <%= link_to("Edit", edit_post_path(post), class: "btn btn-sm btn-default") %>
              <%= link_to("Delete", post_path(post), class: "btn btn-sm btn-default", method: :delete, data: { comfirm: "Are you sure? "}) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
